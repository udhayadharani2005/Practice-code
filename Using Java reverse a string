public class ReverseStringNoBuiltIn {
    public static void main(String[] args) {
        // Step 1: Declare a character array manually
        char[] a = {'h', 'a', 'i'};

        // Step 2: Manually find length of array
        int n = 0;
        for (char c : a) {
            n++;
        }

        // Step 3: Use your logic to print reverse
        for (int i = 0; i < n; i++) {
            int r = (n - 1 - i) % n;
            System.out.print(a[r]);
        }
    }
}
